<div class="container">
    <h3> List of Topics</h3>

    <table class="table table-hover js-list-topic">
        <thead>
            <th>ID</th>
            <th>Topic name</th>
            <th>Created at</th>
            <th>Updated at</th>
            <th>Actions</th>
            <th>Group actions</th>
        </thead>
        <tbody>
            <%- @topics.each do |topic| %>
                <tr>
                    <td>
                        <%= topic.id %><br>
                    </td>
                    <td>
                        <%= topic.text %><br>
                    </td>
                    <td>
                        <%= topic.created_at %><br>
                    </td>
                    <td>
                        <%= topic.updated_at %><br>
                    </td>
                    <td>
                        <div class="btn-toolbar">
                            <div class="btn-group">
                                <a id="<%= topic.id %>" class="btn js-edit-topic" href="#"><i class="icon-pencil"></i> Edit topic</a>
                                <a id="<%= topic.id %>" class="btn btn-danger js-delete-topic" href="#"><i class="icon-remove"></i> Delete topic</a>

                            </div>
                        </div>
                    </td>
                    <td>
                      <input id="<%= topic.id %>" type="checkbox">
                    </td>
                <tr>
            <% end %>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td>
                    <a class="btn btn-primary js-create-new"><i class="icon-plus"></i> Add new topic</a>
                </td>
                <td>
                    <div class="btn-toolbar">
                        <div class="btn-group">
                            <a class="btn btn-primary" href="#"><i class="icon-ok"></i> Select all</a>
                            <a class="btn btn-danger js-delete-topic" href="#"><i class="icon-remove"></i> Delete selected</a>
                        </div>
                    </div>
                </td>
            <tr>
        </tbody>
    </table>
    <div class="row">
        <div class="span1">
            <div class="btn-toolbar">
                <div class="btn-group">
                    <a class="btn " href="#"><i class="icon-fast-backward"></i> Fast backward</a>
                    <a class="btn " href="#"><i class="icon-backward"></i> Backward</a>
                    <input type="text" value="<%= 0 %>" class="input-small search-query">
                    <a class="btn " href="#"><i class="icon-forward"></i> Forward</a>
                    <a class="btn " href="#"><i class="icon-fast-forward"></i> Fast forward</a>
                </div>
            </div>
        </div>
    </div>
</div>